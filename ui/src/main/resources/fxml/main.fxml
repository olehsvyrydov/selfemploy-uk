<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="uk.selfemploy.ui.controller.MainController"
            styleClass="root-container">

    <!-- Top Navigation Bar -->
    <top>
        <HBox styleClass="nav-bar" alignment="CENTER_LEFT" spacing="20">
            <padding>
                <Insets top="15" right="20" bottom="15" left="20"/>
            </padding>
            <Label text="UK Self-Employment Manager" styleClass="app-title"/>
            <HBox HBox.hgrow="ALWAYS"/>
            <Button text="Settings" styleClass="nav-button"/>
        </HBox>
    </top>

    <!-- Left Sidebar Navigation -->
    <left>
        <VBox styleClass="sidebar" spacing="5" prefWidth="200">
            <padding>
                <Insets top="20" right="10" bottom="20" left="10"/>
            </padding>
            <Button text="Dashboard" styleClass="sidebar-button" maxWidth="Infinity"/>
            <Button text="Income" styleClass="sidebar-button" maxWidth="Infinity"/>
            <Button text="Expenses" styleClass="sidebar-button" maxWidth="Infinity"/>
            <Button text="Tax Summary" styleClass="sidebar-button" maxWidth="Infinity"/>
            <Button text="HMRC Submission" styleClass="sidebar-button" maxWidth="Infinity"/>
            <VBox VBox.vgrow="ALWAYS"/>
            <Button text="Help" styleClass="sidebar-button-secondary" maxWidth="Infinity"/>
        </VBox>
    </left>

    <!-- Main Content Area -->
    <center>
        <VBox fx:id="contentArea" styleClass="content-area" spacing="20">
            <padding>
                <Insets top="30" right="30" bottom="30" left="30"/>
            </padding>
            <Label text="Welcome to UK Self-Employment Manager" styleClass="page-title"/>
            <Label text="Track your income, expenses, and submit to HMRC with one click."
                   styleClass="page-subtitle"/>
        </VBox>
    </center>

</BorderPane>
