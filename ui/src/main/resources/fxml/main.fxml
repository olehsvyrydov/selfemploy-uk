<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="uk.selfemploy.ui.controller.MainController"
            styleClass="root-container"
            prefWidth="1200" prefHeight="800"
            minWidth="900" minHeight="600">

    <!-- Stylesheet loaded programmatically in Launcher.java -->

    <!-- Header Bar -->
    <top>
        <HBox fx:id="headerBar" styleClass="header-bar" alignment="CENTER_LEFT" spacing="15">
            <padding><Insets top="10" right="20" bottom="10" left="20"/></padding>

            <!-- Logo & Title -->
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label text="SE" styleClass="logo-text"/>
                <Label text="UK Self-Employment Manager" styleClass="app-title"/>
            </HBox>

            <Region HBox.hgrow="ALWAYS"/>

            <!-- Tax Year Selector -->
            <HBox alignment="CENTER" spacing="8">
                <Label text="Tax Year:" styleClass="label-secondary"/>
                <ComboBox fx:id="taxYearSelector" styleClass="tax-year-selector" prefWidth="130"/>
            </HBox>

            <!-- Notification Bell (SE-309) -->
            <StackPane fx:id="notificationBell" styleClass="notification-bell" onMouseClicked="#handleNotificationsClick">
                <Button fx:id="notificationButton" styleClass="header-icon-button" onAction="#handleNotificationsAction" accessibleText="Notifications">
                    <graphic>
                        <StackPane styleClass="header-icon-circle, header-icon-notification">
                            <FontIcon iconLiteral="fas-bell" iconSize="16" styleClass="header-icon-fonticon"/>
                        </StackPane>
                    </graphic>
                </Button>
                <Label fx:id="notificationBadge" styleClass="notification-badge"
                       text="0" visible="false" managed="false"
                       StackPane.alignment="TOP_RIGHT"/>
            </StackPane>

            <!-- Action Buttons -->
            <Button fx:id="helpButton" styleClass="header-icon-button" onAction="#handleHelp" accessibleText="Help">
                <graphic>
                    <StackPane styleClass="header-icon-circle, header-icon-help">
                        <FontIcon iconLiteral="fas-question-circle" iconSize="16" styleClass="header-icon-fonticon"/>
                    </StackPane>
                </graphic>
            </Button>
            <Button fx:id="settingsButton" styleClass="header-icon-button" onAction="#handleSettings" accessibleText="Settings">
                <graphic>
                    <StackPane styleClass="header-icon-circle, header-icon-settings">
                        <FontIcon iconLiteral="fas-cog" iconSize="16" styleClass="header-icon-fonticon"/>
                    </StackPane>
                </graphic>
            </Button>
        </HBox>
    </top>

    <!-- Navigation Sidebar -->
    <left>
        <VBox fx:id="sidebar" styleClass="sidebar" spacing="4" prefWidth="220" minWidth="220">
            <padding><Insets top="20" right="12" bottom="20" left="12"/></padding>

            <!-- Main Navigation -->
            <Label text="NAVIGATION" styleClass="nav-section-label"/>

            <ToggleButton fx:id="navDashboard" text="Dashboard" styleClass="nav-button"
                          maxWidth="Infinity" onAction="#navigateToDashboard" selected="true">
                <toggleGroup><ToggleGroup fx:id="navGroup"/></toggleGroup>
            </ToggleButton>

            <ToggleButton fx:id="navIncome" text="Income" styleClass="nav-button"
                          maxWidth="Infinity" onAction="#navigateToIncome">
                <toggleGroup><fx:reference source="navGroup"/></toggleGroup>
            </ToggleButton>

            <ToggleButton fx:id="navExpenses" text="Expenses" styleClass="nav-button"
                          maxWidth="Infinity" onAction="#navigateToExpenses">
                <toggleGroup><fx:reference source="navGroup"/></toggleGroup>
            </ToggleButton>

            <ToggleButton fx:id="navTax" text="Tax Summary" styleClass="nav-button"
                          maxWidth="Infinity" onAction="#navigateToTax">
                <toggleGroup><fx:reference source="navGroup"/></toggleGroup>
            </ToggleButton>

            <ToggleButton fx:id="navHmrc" text="HMRC Submission" styleClass="nav-button"
                          maxWidth="Infinity" onAction="#navigateToHmrc">
                <toggleGroup><fx:reference source="navGroup"/></toggleGroup>
            </ToggleButton>

            <Region VBox.vgrow="ALWAYS"/>

            <!-- Secondary Navigation -->
            <Separator styleClass="nav-separator"/>

            <Button fx:id="navHelp" text="Help &amp; Support" styleClass="nav-button-secondary"
                    maxWidth="Infinity" onAction="#handleHelp"/>
        </VBox>
    </left>

    <!-- Content Area -->
    <center>
        <StackPane fx:id="contentPane" styleClass="content-pane">
            <!-- Views loaded dynamically -->
        </StackPane>
    </center>

    <!-- Status Bar -->
    <bottom>
        <HBox fx:id="statusBar" styleClass="status-bar" alignment="CENTER_LEFT" spacing="20">
            <padding><Insets top="8" right="20" bottom="8" left="20"/></padding>

            <Label fx:id="taxYearLabel" text="Tax Year 2025/26" styleClass="status-item"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label fx:id="deadlineLabel" text="Loading..." styleClass="status-item"/>
        </HBox>
    </bottom>

</BorderPane>
