{
  "name": "self-employment-website-tests",
  "version": "1.0.0",
  "description": "E2E tests for UK Self-Employment Manager landing page",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "test:report": "playwright show-report",
    "serve": "npx serve . -p 3000",
    "test:ci": "playwright test --reporter=html,junit --reporter-option=outputFile=test-results/junit.xml"
  },
  "devDependencies": {
    "@playwright/test": "^1.42.0",
    "@axe-core/playwright": "^4.8.0",
    "serve": "^14.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
